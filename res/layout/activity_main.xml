<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#609ac7"
    tools:context="doston2509.com.guesscontinent.MainActivity">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginTop="60px"
        android:textAlignment="center"
        android:textColor="#000833"
        android:text="@string/welcome"
        android:textStyle="bold"
        android:textSize="24px"
        />
    <TextView
        android:id="@+id/asking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35px"
        android:layout_centerHorizontal="true"

        android:textAlignment="center"
        android:textStyle="normal"
        android:layout_below="@id/Welcome"
        android:text="Please, enter the name of players" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/asking"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:ems="10"
        android:textAlignment="center"
        android:hint="Enter the name of player"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/name"
        android:layout_marginTop="40px"
        android:onClick="onClick"
        android:background="#405bea"
        android:text="enter" />

</RelativeLayout>
